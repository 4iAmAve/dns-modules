# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

[*.md]

trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0

[metadata.json]
max_line_length = 0
insert_final_newline = false
